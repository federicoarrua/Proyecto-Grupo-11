<div class="col-md-3"></div>

<div class="col-md-6 col-sm-8">
	<h3 class="text-center">Editar información de usuario</h3>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
	  <%= devise_error_messages! %>
	  
	  <div class="form-group">
		<%= f.label :nombre %><br />
		<%= f.text_field :nombre, autofocus: true, class:'form-control' %>
	  </div>
	  
	  <div class="form-group">
		<%= f.label :apellido %><br />
		<%= f.text_field :apellido, autofocus: true, class:'form-control' %>
	  </div>
	  
	  <div class="form-group">
		<%= f.label :email %><br />
		<%= f.email_field :email, autofocus: true, class:'form-control' %>
	  </div>

	  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
		<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
	  <% end %>
	  
	  <div class="form-group">
		<%= f.label :pais %><br />
		<%= country_select("user","pais") %>
	  </div>
	  
	  <div class="form-group">
		<%= f.label "Contraseña nueva" %> <i>(Dejar en blanco si no se quiere cambiar)</i><br />
		<%= f.password_field :password, autocomplete: "off", class:'form-control' %>
	  </div>

	  <div class="form-group">
		<%= f.label "Confirmación de contraseña nueva" %><br />
		<%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
	  </div>

	  <div class="form-group">
		<%= f.label "Contraseña actual" %> <i>(se necesita su contraseña actual para confirmar cambios)</i><br />
		<%= f.password_field :current_password, autocomplete: "off", class:'form-control' %>
	  </div>

	  <div class="actions col-md-2 col-sm-2">
		<%= f.submit "Update", class:'btn btn-primary' %>
	  </div>
	<% end %>
	
	<div class="col-md-4 col-sm-4">
		<%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'btn btn-danger' %>
	</div>
	
	<div class="col-md-2 col-sm-2">
		<%= link_to "Atras", :back, class:'btn btn-default' %>
	</div>
</div>
