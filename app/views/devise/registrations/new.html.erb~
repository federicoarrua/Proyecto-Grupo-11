
<div class="col-md-6 col-sm-8 ">
	<h3 class="text-center">Registro</h3>
	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  
	    <% if resource.errors.any? %>
			<div class="alert alert-danger">
			  <h6>Problemas en el registro:</h6>
			  <ul>
			  <% resource.errors.full_messages.each do |message| %>
					<li><h6><%= message %></h6></li>
			  <% end %>
			  </ul>
			</div>
		<% end %>
	  
	  <div class="form-group">
		<%= f.label :nombre %><br />
		<%= f.text_field :nombre, autofocus: true, class:'form-control input-medium' %>
	  </div>
	  
	  <div class="form-group">
		<%= f.label :apellido %><br />
		<%= f.text_field :apellido, autofocus: true, class:'form-control input-medium' %>
	  </div>
	  
	  <div class="form-group">
		<%= f.label :pais %><br />
		<%= country_select("user","pais",priority_countries:["AR"]) %>
	  </div>
	  
	  <div class="form-group">
		<%= f.label 'Fecha de nacimiento' %><br />
		<%= f.date_select :fecha, :order => [:day, :month, :year], :start_year=>1900 %>
	  </div>
	  
	  <div class="form-group">
		<%= f.label :email %><br />
		<%= f.email_field :email, autofocus: true, class:'form-control input-large' %>
	  </div>

	  <div class="form-group">
		<%= f.label :password %>
		<% if @minimum_password_length %>
		<em>(<%= @minimum_password_length %> characters minimum)</em>
		<% end %><br />
		<%= f.password_field :password, autocomplete: "off", class:'form-control input-medium' %>
	  </div>

	  <div class="form-group">
		<%= f.label :password_confirmation %><br />
		<%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control input-medium' %>
	  </div>
		
	  <div class="actions">
		<%= f.submit "Registrarse", class:'btn btn-default' %>
	  </div>
	<% end %>
<%= render "devise/shared/links" %>
</div>
